<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".banshi.PrintTestActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llbtn"
        >

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20px"
            android:textSize="30px"/>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/printView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="printview"
            android:text="打印view视图"
           />

        <Button
            android:id="@+id/print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/printView"
            android:onClick="print"
            android:text="直接打印pdf"
           />

        <Button
            android:id="@+id/print1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/printView"
            android:onClick="print1"
            android:text="打印prn文件1"
           />

        <Button
            android:id="@+id/print2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/printView"
            android:onClick="print2"
            android:text="打印prn文件2"
            />
    </LinearLayout>


</RelativeLayout>